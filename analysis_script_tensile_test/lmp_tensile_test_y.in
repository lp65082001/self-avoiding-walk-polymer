#system setting #

units		real
boundary	p p p
atom_style	angle
bond_style      harmonic
angle_style   harmonic
neigh_modify delay 0 every 1 

pair_style lj/cut 20

# read model #
read_data ./model/homo_single.data 
minimize 0.0 1.0e-8 1000 100000

# time integration settings #
timestep		20	# 20fs

# thermosystem set #
velocity 		all create 300.0 4928459 dist gaussian
  
# reset timestep #
reset_timestep 0

# run equilibrium #
thermo 10000
fix				1 all npt temp 300.0 300.0 200 iso 1.0 1.0 1000
run 50000 

unfix 1

# run tensile test #
reset_timestep 0
fix             1 all npt temp 300.0 300.0 200 x 1.0 1.0 1000 y 1.0 -600 1000 z 1.0 1.0 1000
run 500000
write ./tensile_test_x.data